<article class="module width_full">
    <header>
        <h3>
            <?php echo $this->translate('Monitor device') . ' ' . $this->device->getName()->get() ?>
        </h3>
    </header>
    <div class="module_content tableholder">
        <div id="tab1" class="tab_content">
            <table class="tablesorter" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th><?php echo $this->translate('Device name') ?></th>
                        <th><?php echo $this->translate('Device type') ?></th>
                        <th><?php echo $this->translate('Location name') ?></th>
                        <th><?php echo $this->translate('IP') ?></th>
                        <th><?php echo $this->translate('MAC') ?></th>
                        <th><?php echo $this->translate('Interface name') ?></th>
                        <th><?php echo $this->translate('In') ?></th>
                        <th><?php echo $this->translate('Out') ?></th>
                        <th><?php echo $this->translate('Status') ?></th>
                    </tr>
                </thead>
                <tbody>
                    <?php foreach ($this->device->getInterfaces() as $interface): ?>
                        <?php
                        if ($interface->getName()->get() != 'eth0' && $interface->getName()->get() != 'eth1') {
                            continue;
                        }

                        switch ($interface->getStatus()) {
                            case '1':
                                $status = $this->translate('Up');
                                break;

                            case '2':
                                $status = $this->translate('Down');
                                break;

                            default:
                                $status = $this->translate('Unknown');
                                break;
                        }

                        ?>

                        <tr>
                            <td></td>
                            <td><?php echo $this->device->getName() ?></td>
                            <td><?php echo $this->deviceInfo->typeName ?></td>
                            <td><?php echo $this->device->getLocation() ?></td>
                            <td><?php echo $interface->getIp() ?></td>
                            <td><?php echo $interface->getMac() ?></td>
                            <td><?php echo $interface->getName() ?></td>
                            <td><?php echo $interface->getIn() ?></td>
                            <td><?php echo $interface->getOut() ?></td>
                            <td><?php echo $status ?></td>
                        </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
        </div>
    </div>
</article>